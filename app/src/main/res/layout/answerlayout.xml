<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btn3"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="21dp"
        android:text="3"
        android:padding= "7dp"

        android:layout_below="@+id/btn1"
        android:layout_toStartOf="@+id/btn2"
        android:layout_marginEnd="31dp" />

    <Button
        android:id="@+id/btn1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="5dp"
        android:text="1"
        android:padding= "7dp"
        android:layout_alignBaseline="@+id/btn2"
        android:layout_alignBottom="@+id/btn2"
        android:layout_alignEnd="@+id/btn3"
        android:layout_marginEnd="0dp" />

    <Button
        android:id="@+id/btn4"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="4"
        android:padding= "7dp"
        android:layout_alignBaseline="@+id/btn3"
        android:layout_alignBottom="@+id/btn3"
        android:layout_alignStart="@+id/btn2"
        android:layout_marginEnd="20dp" />

    <Button
        android:id="@+id/btn2"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="2"
        android:padding= "7dp"
        android:layout_marginEnd="88dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Display question here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/questionView"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginBottom="65dp"
        android:layout_above="@+id/btn2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>